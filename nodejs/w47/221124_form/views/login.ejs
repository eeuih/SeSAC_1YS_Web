<html> 
    <head> 
        <title></title>
        <meta charset="UTF-8">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script>
            function sendPost(){
                var form = document.getElementById("login");
                axios({
                    method: "post", // 어떤 방식으로 보낼 것인지 
                    url: "/login2", // 어떤 경로로 보낼 것인지 
                    data: { id: form.UserId.value, pw: form.UserPw.value}
                }).then(function(res){ 
                   document.querySelector('#result').innerHTML = res.data;
                });

            }
        </script>
    </head>

    <body> 

        <form id= "login">

            <fieldset>
            <legend>로그인</legend>
            
            아이디 :   <input type="text" name="UserId" required> <br><br>
            비밀번호 : <input type="password" name="UserPw" required> <br><br>
            
            <button type="button" onclick="sendPost();">로그인</button>

            <div id="result"></div>
            
        </fieldset>
        </form>

    </body>
</html>